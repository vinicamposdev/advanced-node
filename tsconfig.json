{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": ["src", "tests"],
    "target": "es2020",
    "sourceMap": true,
    "skipLibCheck":true,
    "forceConsistentCasingInFileNames":true,
    "module": "CommonJS",
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }, 
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
	"include": ["src", "tests"],
  "exclude": []
}